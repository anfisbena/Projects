<div>
  <a href="/"><button>HOME</button></a>
  {{#if user}}
    <a href="/profile"><button>PROFILE</button></a>
    <a href="/cart"><button>CART</button></a>
  {{else}}
    <a href="/login"><button>LOGIN</button></a>
  {{/if}}
  {{#if products.length}}
    {{#each products}}
      <div>
        {{#each thumbnails}}
          <img src="{{this}}" alt="productItem">
        {{/each}}
        <h2>{{this.title}}</h2>
        <p class="code">NKU:{{this.code}}</p>
        <p>{{this.description}}</p>
        <h2>${{this.price}}</h2>
      </div>
      <div>
        <form>
            <label for="qty">Qty:</label>
            <input type="number" name="qty" min="1" max="5" value="1" class="qty" pid={{this._id}}>
            <input type="button" value="Add to cart" class="addCartItem">
        </form>
        <h3>Quantity</h3>
      </div>
    {{/each}}
      <div>
        <h2>Page {{currentPage}} of {{totalPages}}</h2>
        {{#if hasPrevPage}}
          <a href={{prevLink}}><button>Previous</button></a>
        {{/if}}
        {{#if hasNextPage}}
          <a href={{nextLink}}><button>Next</button></a>
        {{/if}}
      </div>
  {{else}}
    <h2>Product not found</h2>
  {{/if}} 
</div>

